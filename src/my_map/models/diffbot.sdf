<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="diffbot">
    <static>false</static>

    <!-- ================= BASE ================= -->
    <link name="base_link">
      <pose>0 0 0.07 0 0 0</pose>

      <inertial>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.1</ixx>
          <iyy>0.1</iyy>
          <izz>0.1</izz>
        </inertia>
      </inertial>

      <collision name="base_collision">
        <geometry>
          <box>
            <size>0.3 0.2 0.1</size>
          </box>
        </geometry>
      </collision>

      <visual name="base_visual">
        <geometry>
          <box>
            <size>0.3 0.2 0.1</size>
          </box>
        </geometry>
      </visual>
    </link>

    <!-- ================= LEFT WHEEL ================= -->
    <link name="left_wheel_link">
      <pose>0.1 0.1 0.05 0 0 0</pose>

      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>

      <collision name="left_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="left_wheel_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="left_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>left_wheel_link</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <effort>10</effort>
          <velocity>10</velocity>
        </limit>
        <!-- 조인트 내부 마찰 설정 -->
        <dynamics>
          <damping>0.1</damping>   <!-- 감쇠: 회전 시 발생하는 저항 (값이 클수록 끈적하게 회전) -->
          <friction>0.05</friction> <!-- 마찰: 회전을 시작하기 위해 필요한 최소한의 힘 (정적 마찰) -->
        </dynamics>
      </axis>
    </joint>

    <!-- ================= RIGHT WHEEL ================= -->
    <link name="right_wheel_link">
      <pose>0.1 -0.1 0.05 0 0 0</pose>

      <inertial>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.01</ixx>
          <iyy>0.01</iyy>
          <izz>0.01</izz>
        </inertia>
      </inertial>

      <collision name="right_wheel_collision">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </collision>

      <visual name="right_wheel_visual">
        <pose>0 0 0 1.5708 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.02</length>
          </cylinder>
        </geometry>
      </visual>
    </link>

    <joint name="right_wheel_joint" type="revolute">
      <parent>base_link</parent>
      <child>right_wheel_link</child>
      <axis>
        <xyz>0 1 0</xyz>
        <limit>
          <effort>10</effort>
          <velocity>10</velocity>
        </limit>
        <!-- 조인트 내부 마찰 설정 -->
        <dynamics>
          <damping>0.1</damping>   <!-- 감쇠: 회전 시 발생하는 저항 (값이 클수록 끈적하게 회전) -->
          <friction>0.05</friction> <!-- 마찰: 회전을 시작하기 위해 필요한 최소한의 힘 (정적 마찰) -->
        </dynamics>
      </axis>
    </joint>

    <!-- ================= CASTER (Back SUPPORT) ================= -->
    <link name="caster_link">
      <pose>-0.15 0 0.025 0 0 0</pose>

      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx>
          <iyy>0.001</iyy>
          <izz>0.001</izz>
        </inertia>
      </inertial>

    <collision name="caster_collision">
        <geometry>
        <sphere>
            <radius>0.025</radius>
        </sphere>
        </geometry>
        <surface>
        <friction>
            <ode>
            <mu>0.01</mu>
            <mu2>0.01</mu2>
            </ode>
        </friction>
        </surface>
    </collision>

      <visual name="caster_visual">
        <geometry>
          <sphere>
            <radius>0.025</radius>
          </sphere>
        </geometry>
      </visual>
    </link>

    <joint name="caster_joint" type="fixed">
      <parent>base_link</parent>
      <child>caster_link</child>
    </joint>
    <!-- ================= CAMERA (FRONT TOP) ================= -->
    <!-- 카메라 본체(Link) -->
    <link name="camera_link">
      <!-- 본체(0.3m 길이)의 앞쪽 끝(0.15m) 상단에 배치 -->
      <pose>0.15 0 0.12 0 0 0</pose> 

      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.0001</ixx>
          <iyy>0.0001</iyy>
          <izz>0.0001</izz>
        </inertia>
      </inertial>

      <collision name="camera_collision">
        <geometry>
          <box>
            <size>0.02 0.05 0.02</size>
          </box>
        </geometry>
      </collision>

      <visual name="camera_visual">
        <geometry>
          <box>
            <size>0.02 0.05 0.02</size>
          </box>
        </geometry>
        <material>
          <ambient>0 0 0 1</ambient>
          <diffuse>0 0 0 1</diffuse>
        </material>
      </visual>

      <!-- 카메라 센서 설정 -->
      <sensor name="camera" type="camera">
        <update_rate>30.0</update_rate>
        <visualize>true</visualize> <!-- 가제보 GUI에서 카메라 시야각을 보여줌 -->
        <camera name="head">
          <horizontal_fov>1.39626</horizontal_fov>
          <image>
            <width>800</width>
            <height>600</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.02</near>
            <far>300</far>
          </clip>
        </camera>
        
        <!-- ROS 2 카메라 플러그인 -->
        <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
          <ros>
            <namespace>/</namespace>
            <remapping>image_raw:=camera/image_raw</remapping>
            <remapping>camera_info:=camera/camera_info</remapping>
          </ros>
          <frame_name>camera_link</frame_name>
        </plugin>
      </sensor>
    </link>

    <!-- 카메라를 본체에 고정하는 관절 (Fixed Joint) -->
    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
    </joint>

    <!-- ================= LIDAR 센서 및 플러그인 ================= -->
    <link name="base_scan">
      <!-- 높이를 0.17로 살짝 낮추고 위치 고정 -->
      <pose>0 0 0.17 0 0 0</pose> 
      <visual name="lidar_visual">
        <geometry> 
          <!-- 올바른 SDF 형식: 하위 태그 사용 -->
          <cylinder> 
            <radius>0.02</radius> 
            <length>0.04</length> 
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient> <!-- 완전 검은색 대신 짙은 회색 -->
          <diffuse>0.1 0.1 0.1 1</diffuse>
        </material>
      </visual>

      <sensor name="lidar" type="ray">
        <always_on>true</always_on>
        <update_rate>10.0</update_rate>
        <visualize>true</visualize>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <!-- 최소 거리를 0.05로 줄여서 자기 자신과의 충돌 에러 방지 -->
            <min>0.05</min> 
            <max>10.0</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
        
        <plugin name="lidar_controller" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <remapping>~/out:=scan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>base_scan</frame_name>
        </plugin>
      </sensor>
    </link>

    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>base_scan</child>
    </joint>


    <!-- ================= DIFF DRIVE ================= -->
    <plugin name="diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/</namespace>
      </ros>

      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>

      <wheel_separation>0.2</wheel_separation>
      <wheel_diameter>0.1</wheel_diameter>
        <!-- 토크를 낮추고 가속도를 더 제한합니다 -->
      <max_wheel_torque>5</max_wheel_torque> 
      <max_wheel_acceleration>0.5</max_wheel_acceleration>

      <command_topic>cmd_vel</command_topic>
      <odometry_topic>odom</odometry_topic>
      <odometry_frame>odom</odometry_frame>
      <robot_base_frame>base_link</robot_base_frame>

      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <publish_wheel_tf>true</publish_wheel_tf>

      <update_rate>50</update_rate>
    </plugin>

  </model>
</sdf>
